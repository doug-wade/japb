!!!
html(ng-app="japb")
  head
    meta(charset='utf8')
    base(href='/')
    title= title
    link(rel='icon', href='/public/favicon.ico', type='image/x-icon')

    // Twitter Bootstrap hosted for production
    // TODO: Manage this with Bower
    // link(rel='stylesheet', href='//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css')

    // boostrap local for development
    // TODO: Manage this with Bower
    link(rel='stylesheet', href='/public/lib/bootstrap/css/bootstrap.css')
    link(rel='stylesheet', href='/public/lib/bootstrap/css/bootstrap-responsive.css')

    // App styles
    // TODO: Migrate this to less.
    link(rel='stylesheet', href='/public/css/style.css')

  body
    div.navbar.navbar-inverse.navbar-fixed-top
      div.navbar-inner
        div.container
          button.btn.btn-navbar(type='button',
                                data-toggle='collapse',
                                data-target='.nav-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.brand(href='/') JAPB
          div.nav-collapse.collapse
            ul.nav
              li.active
                a(href='/') Home
              li.dropdown
                a.dropdown-toggle(href='#',
                                  data-toggle='dropdown') Admin
                ul.dropdown-menu
                  li
                    a(href='/addPost') New Post
            div.pull-right.sign-in
              if username==undefined
                p Anonymous <a href='/signin'>(sign in)</a>
              else
                p #{username}
    div.container
      block content
    include footer

    // Angular hosted for production
    //script(src='http://code.angularjs.org/1.1.5/angular.min.js')
    //script(src='http://code.angularjs.org/1.1.5/angular-resource.min.js')
    //script(src='http://code.angularjs.org/1.1.5/angular-cookies.min.js')
    //script(src='http://code.angularjs.org/1.1.5/angular-sanitize.min.js')

    // Angular local for development 
    // TODO: Manage this with Bower
    script(src='/public/lib/angular/angular.js')
    script(src='/public/lib/angular/angular-resource.js')
    script(src='/public/lib/angular/angular-cookies.js')
    script(src='/public/lib/angular/angular-sanitize.js')

    // Bootstrap hosted for production
    //script(src='//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js')

    // TODO: Host Bootstrap locally for development using Bower.

    //App Javascripts
    script(src='/public/js/services.js')
    script(src='/public/js/controllers.js')
    script(src='/public/js/filters.js')
    script(src='/public/js/directives.js')
    script(src='/public/js/app.js')
