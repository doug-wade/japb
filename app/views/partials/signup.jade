form.form-signin
  h2.form-signin-heading Create Account
  input.input-block-level(type='text',
                          ng-model='user.username', 
                          name='username', 
                          required,
                          placeholder='Username')
  input.input-block-level(type='text', 
                          ng-model='user.email', 
                          name='email', 
                          required,
                          placeholder='Email address')
  input.input-block-level(type='password', 
                          ng-model='user.password', 
                          name='password', 
                          placeholder='Password')
  input.input-block-level(type='password', placeholder='Confirm Password')
  label.checkbox Remember me
    input(type='checkbox', value='remember-me')
  button.btn.btn-large.btn-primary(type='submit', 
                                   ng-click='registerUser(user)') Create